/* components/blogImgText/blogImgText.wxss */
.blog-section {
    display: flex;
}
.blog-left {
    margin-right: 15rpx;
}

.person-img {
    width: 90rpx;
    height: 90rpx;
    object-fit: cover;
}

.blog-right {
    
}

.img-grid {
    display: flex;
    flex-wrap: wrap;
}

.blog-name {
    color: var(--theme-color);
    font-size: 40rpx;
    font-weight: 400;
    margin-top: -10rpx;
    margin-bottom: 5rpx;
}

.blog-content {
    letter-spacing: 3rpx;
    margin-bottom: 5rpx;
}

.img-item {
    /* max-width: 400rpx; */
    width: 190rpx;
    height: 190rpx;
    margin-top: 6rpx;
}
.img-item:not(:nth-child(3n)) {
    margin-right: 6rpx;
}

.img-item:nth-last-child(1):first-child{
    width: 200px;
    height: 200px;
}
.img-item-four {
    width: 180rpx;
    margin-right: 6rpx;
}

.img-item-four:nth-child(2n) {
    margin-right: 40rpx;
}


